{
  "extends": "../../tsconfig.json",
  "references": [
    {
      "path": "../lib"
    },
    {
      "path": "../ui"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tamagui.config.ts"]
}
